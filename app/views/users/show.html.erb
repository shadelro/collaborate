<h3>User</h3>
<p>User: <%= @user.name %></p>
<p>Email: <%= @user.email if @user.email %></p>
<p>Collaborations:</p>
<ul>
  <% @user.collaborations.each do |collaboration| %>
    <li><%= link_to collaboration.name, user_collaboration_path(@user, collaboration) %></li>
  <% end %>
</ul>
<% if @user.id == current_user.id %>
  <%= link_to 'Create a Collaboration', new_user_collaboration_path(@user) %>
<% end %>
