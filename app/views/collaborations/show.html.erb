<p>Name: <%= @collaboration.name %></p>
<p>Members:</p>
<ul>
  <% @collaboration.users.each do |user| %>
    <li><%= user.name %></li>
  <% end %>
</ul>
<% unless @collaboration.users.find { |user| user.id == current_user.id } %>
  <p><%= link_to 'Join', new_participation_path(user_id: current_user.id, collaboration_id: @collaboration.id) %></p>
<% end %>
